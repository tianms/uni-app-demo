/** 是否被压缩，默认1被压缩，0：不压缩 */
/* } */
.box-item:nth-of-type(1) {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1; /** 占得比例大小 */
}
.box-item:nth-of-type(2) {
	-webkit-box-flex: 2;
	-webkit-flex: 2;
	        flex: 2;
}
.box-item:nth-of-type(3) {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
