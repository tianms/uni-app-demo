.paper-list {
	padding: 20rpx;
	border-bottom: 1rpx solid #EEEEEE;
}
.paper-list>image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 100%;
	margin-right: 20rpx;
	-webkit-flex-shrink: 0;
	        flex-shrink: 0;
}
.paper-list>view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.paper-list>view>view:first-child {
	font-size: 35rpx;
}
.paper-list>view>view:first-child>view {
	color: CBCBCB;
}
.paper-list>view>view:last-child {
	color: #888888;
}
